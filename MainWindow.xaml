<Window x:Class="ast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ast"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Canvas>
        <TextBox Name="ts" Canvas.Left = "50" Canvas.Top="50" Width="500" TextWrapping="Wrap"/>
        <Button Name="Mybutton" x:Click="Mybutton_click" Canvas.Left="50" Canvas.Top="100" Width="100" Height="50" />
        </Canvas>
    </Grid>
</Window>
